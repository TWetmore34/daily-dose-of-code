<body class="body-bg">
    <div class="title">
        <div class="login-title">
             Daily Dose of Code
        </div>
    </div>
    <div class="text-center cards-container">
        <form style="max-width:50%;margin:50px;" class="login-form">
            <h1 class="h3 mb-1 font-weight-normal">Back for more practice? <br> Log in below!</h1>
            <label for="emailAddress" class="sr-only"></label>
            <input type="email" id="emailAddressLogin" class="form-control" placeholder="Email Address" required autofocus>
            <label for="password" class="sr-only"></label>
            <input type="password" id="passwordLogin" placeholder="Password" class="form-control">
            <div class="mt-3">
                <button class="btn btn-lg btn-block login-btn-color login-button" >Log In</button>
            </div>
        </form>

        {{!-- <div class="vertical-row"></div> --}}
        

        <form style="max-width:50%;margin:50px;" class="signup-form">
            <h1 class="h3 mb-1 font-weight-normal">Join thousands of software <br> developers looking to better their <br> coding skills every day!</h1>
            <label for="emailAddress" class="sr-only"></label>
            <input type="email" id="emailAddressSignup" class="form-control" placeholder="Email Address" required autofocus>
            <label for="password" class="sr-only"></label>
            <input type="password" id="passwordSignup" placeholder="Password" class="form-control">
            <div class="mt-4">
            <input type="text" id="username" placeholder="Username" class="form-control">
            <div class="mt-3">
                <button class="btn btn-lg btn-block signup-btn-color" >Sign Up!</button>
            </div>
        </form>
    
    </div>
</body>

<script src="./js/login.js"></script>












