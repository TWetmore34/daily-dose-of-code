const { Model, DataTypes } = require('sequelize');
const sequelize = require('../config/connection');

class Codeproblem extends Model {}

Email.init(
  {
    id: {
      type: DataTypes.INTEGER,
      allowNull: false,
      primaryKey: true,
      autoIncrement: true,
    },


    subject: {
      type: DataTypes.STRING,
      allowNull: false,
    },


    codeproblem: {
      type: DataTypes.STRING,
      allowNull: false,
      references: {
        model: 'User',  /* codeproblem table goes here */
        key: 'id',
    },


    bodytemplate: {
      type: DataTypes.STRING,
      allowNull: false,
    },


    recipientemail: {
      type: DataTypes.STRING,
      allowNull: false,
    },


    senderemail: {
      type: DataTypes.STRING,
      allowNull: false,
    },

  
  {
    sequelize,
    freezeTableName: true,
    underscored: true,
    modelName: 'Codeproblem',
  }
);

module.exports = Codeproblem;
